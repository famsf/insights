<div class="hub">
  <div class="featured-story">
    <div>
    </div>
    <div class="featured-story-wrapper">
      {% include "@atoms/img/img.html.twig" with {
        classes: 'featured-story-img',
        style: 'vertical',
        src: content_image.src,
        url: content_image.src,
        alt: content_image.alt
      } %}
      {% if is_on_view %}
        <div class="on-view on-view-featured">On View</div>
      {% endif %}
      <div class="overlay">
        <div class="overlay__contents">
          <h1>{{ title }}</h1>
          {% if subtitle is defined %}
            <h2>{{ subtitle }}</h2>
          {% endif %}
          <div class="button-wrapper">
            {% if (read_cta is defined) %}
              {{ read_link }}
            {% endif %}
            {% if (tickets_link is defined) %}
              {{ tickets_link }}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
  {% if stories is defined %}
    <div class="stories">
      <div class="story-filter">
        <span class="filter-label">Filter:</span>
      </div>
        {% for story in stories %}
          {% include "@organisms/hub/hub__story.html.twig" with {
            image: story.content__image,
            title: story.title,
            subtitle: story.subtitle|default(''),
            read_link: story.read_link|default(''),
            is_on_view: story.is_on_view,
            tags: story.tags|default('')
          } only %}
      {% endfor %}
    </div>
  {% endif %}
</div>
