{% extends "@atoms/one_up--primary/one_up--primary.html.twig" %}


{% block column %}
  <video class="video_element cell medium-grid-10" poster="/assets/images/video/rodin.jpg" id="bgvid" playsinline autoplay muted {# loop #}>
    <source src="/assets/video/rodin.webm" type="video/webm">
      <source src="/assets/video/rodin.m4v" type="video/m4v">
  </video>
  <div id="video-controls" class="video--embed__controls medium-grid-10">
    <button type="button" class="play-pause">Play</button>
    <input type="range" class="seek-bar" value="0">
    <button type="button" class="mute">Mute</button>
    <input type="range" class="volume-bar" min="0" max="1" step="0.1" value="1">
    <button type="button" class="full-screen">Full-Screen</button>
  </div>
{% endblock %}
