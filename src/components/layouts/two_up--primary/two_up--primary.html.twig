{% set offset_left = offset_left ?: 'medium-offset-1' %}
{% set offset_right = offset_right ?: 'medium-offset-1' %}
<div class="two_up--primary fluid">
  <div class="wrapper grid-x grid-margin-x">
    {% block left %}
      <div class="cell medium-4 {{ offset_left }}">
        {% block content_left %}
          {% include content_left.component with content_left.contents only %}
        {% endblock %}
      </div>
    {% endblock %}
    {% block right %}
      <div class="cell medium-4 {{ offset_right }}">
        {% block content_right %}
          {% include content_right.component with content_right.contents only %}
        {% endblock %}
      </div>
    {% endblock %}
  </div>
</div>
